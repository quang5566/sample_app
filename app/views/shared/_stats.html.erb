<% @user ||= current_user %>
<div class="stats">
  <%= link_to followee_follow_path(@user, title: "following") do%>
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    <%= t "micropost.following" %>
  <% end %>
  <%= link_to followee_follow_path(@user, title: "followers") do%>
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    <%= t "micropost.followers" %>
  <% end %>
</div>
