<% provide :title, t("text_repass.forgot_pass") %>
<h1><%=t "text_repass.forgot_pass" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with scope: :password_reset, url: password_resets_path do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.submit t("text_repass.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
