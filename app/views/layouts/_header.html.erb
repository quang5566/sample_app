<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("static_pages.app_name"), "#", id: "logo" %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t("layouts.home"), root_path %></li>
          <li><%= link_to t("layouts.help"), help_path %></li>
          <% if logged_in? %>
            <li><%= link_to t("users.user"), "#" %></li>
            <li class="dropdown">
              <%= link_to "#", :class=>"dropdown-toggle", :data=>{:toggle=>"dropdown"} do %>
                <%= t("users.account")%> <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to t("users.profile"), current_user %></li>
                <li><%= link_to t("users.setting"), "#" %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t("users.logout"), logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t("layouts.login"), login_path %></li>
          <% end %>
        </ul>
      </nav>
  </div>
</header>
