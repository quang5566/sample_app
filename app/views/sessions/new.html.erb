<% provide :title, t("layouts.login") %>
<h1><%= t("layouts.login") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with scope: :session, url: login_path, local: true do |f| %>

      <%= f.label :email, t("users.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("users.pass") %>
      <%= link_to t("text_repass.forgot_pass"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t("users.login_remember")%></span>
      <% end %>

      <%= f.submit t("layouts.login"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t("users.new_user") %> <%= link_to t("static_pages.home.sign_btn"), signup_path %></p>
  </div>
</div>
