<% provide :title, t("users.signup") %>
<h1><%= t "users.signup" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @user, local: true do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :name, t("users.name")%>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t("users.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("users.pass") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("users.confirm") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("users.create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
